Config { font        = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
       , borderColor = "black"
       , border      = TopB
       , bgColor     = "black"
       , fgColor     = "grey"
       , position    = TopW L 100
       , commands    = [ Run Network "wlp7s0" ["-L","0","-H","32","--normal","green","--high","red"] 10
                       , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                       , Run Memory ["-t","Mem: <usedratio>%"] 10
                       , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                       , Run StdinReader
                       , Run Battery [ "--template"
                                     , "<acstatus>"
                                     , "--Low"
                                     , "10"
                                     , "--High"
                                     , "80"
                                     , "--low"
                                     , "darkred"
                                     , "--normal"
                                     , "darkorange"
                                     , "--high"
                                     , "darkgreen"
                                     , "--"
                                     , "-o"	
                                     , "<left>% (<timeleft>)"
                                     , "-O"	
                                     , "<fc=#dAA520>Charging</fc>"
                                     , "-i"	
                                     , "<fc=#006000>Charged</fc>"
                                     ] 50
                       ]
        , sepChar          = "%"
        , alignSep         = "}{"
        , template         = "%StdinReader% | %cpu% | %memory% | %wlp7s0% }{ <fc=#ee9a00>%date%</fc> | %battery%"
        , lowerOnStart     = False    
        , hideOnStart      = False   
        , allDesktops      = True    
        , overrideRedirect = False
        , pickBroadest     = True   
        , persistent       = True    
        }
